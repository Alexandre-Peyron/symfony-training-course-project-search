{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row align-items-start">
            <div class="col-4">
                <h2>Filtres</h2>

                {{ form_start(form_search) }}

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            {{ form_widget(form_search.search, {"attr": {"class": "form-control", "placeholder": "Recherche"}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            {{ form_widget(form_search.priceMin, {"attr": {"class": "form-control", "placeholder": "Prix min"}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_widget(form_search.priceMax, {"attr": {"class": "form-control", "placeholder": "Prix max"}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            {{ form_label(form_search.note) }}
                            {% for key, value in form_search.note %}
                                <div class="radio">
                                    {{ form_widget(value) }}
                                    {{ form_label(value) }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            {{ form_widget(form_search.type, {"attr": {"class": "form-control"}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            {{ form_widget(form_search.brand, {"attr": {"class": "form-control"}}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="checkbox">
                                {{ form_widget(form_search.isPremium) }}
                                {{ form_label(form_search.isPremium) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-block" value="Rechercher">Rechercher</button>
                        </div>
                    </div>
                </div>

                {{ form_widget(form_search) }}
                {{ form_end(form_search) }}
            </div>
            <div class="col-8">
                <h2>Produits</h2>
            </div>
        </div>
    </div>
{% endblock %}
